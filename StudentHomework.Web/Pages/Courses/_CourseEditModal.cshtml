@model StudentHomework.Web.Pages.Courses._CourseEditModalModel
<div class="modal fade" id="courseEditModal" tabindex="-1" aria-labelledby="courseEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title" id="courseEditModalLabel">@Model.ModalTitle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" id="courseEditForm">
                <input type="hidden" asp-for="Course.CourseId" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="Course.Title" class="form-label">Title</label>
                        <input asp-for="Course.Title" class="form-control rounded-3" />
                        <span asp-validation-for="Course.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Course.CourseDescription" class="form-label">Description</label>
                        <textarea asp-for="Course.CourseDescription" class="form-control rounded-3"></textarea>
                        <span asp-validation-for="Course.CourseDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer bg-light rounded-bottom-4">
                    <button type="button" class="btn btn-outline-secondary rounded-3" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success rounded-3">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
